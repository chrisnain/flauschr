<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Nick</th>
    <th>Email</th>
    <th>Active</th>
    <th>Location</th>
    <th>Language</th>
    <th>Timezone</th>
    <th>Website</th>
    <th>Bio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.nick %></td>
    <td><%= user.email %></td>
    <td><%= user.active %></td>
    <td><%= user.location %></td>
    <td><%= user.language %></td>
    <td><%= user.timezone %></td>
    <td><%= user.website %></td>
    <td><%= user.bio %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

